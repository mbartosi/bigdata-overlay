[ -d /var/run/local ] || mkdir -m=777 /var/run/local

pidfile="/var/run/local/solr-8983.pid"
command="/opt/solr/bin/solr"
command_args="start"
start_stop_daemon_args="-u solr"


depend() {
    use net
}


